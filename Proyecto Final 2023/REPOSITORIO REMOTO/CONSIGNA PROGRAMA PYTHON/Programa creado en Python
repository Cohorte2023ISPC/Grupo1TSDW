import mysql.connector

class BasedDatos():
    def __init__(self):
        self.coneccion = mysql.connector.connect(host='localhost',
            port=3306,
            user='root'
            password='purosveintepesos2023',
            db='ProyectoFinal'
        )
    def consultarCategoria(self):
        if self.coneccion.is_connected():
            cursor=self.coneccion.cursor()
            cursor.execute("SELECT Categoria_Norma")
            resultado= cursor.fetchall()
            return resultado
       
